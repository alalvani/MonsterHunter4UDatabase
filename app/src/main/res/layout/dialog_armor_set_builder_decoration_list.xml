<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView android:id="@+id/decoration_1_icon"
                   android:layout_width="25sp"
                   android:layout_height="25sp"
                   android:paddingRight="10dp"/>

        <TextView android:id="@+id/decoration_1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:background="@drawable/dialog_clicked_states"
                  android:text="No Decoration"/>
    </LinearLayout>

    <LinearLayout android:gravity="center_vertical"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/decoration_2_icon"
                   android:layout_width="25sp"
                   android:layout_height="25sp"
                   android:paddingRight="10dp"/>

        <TextView android:id="@+id/decoration_2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:background="@drawable/dialog_clicked_states"
                  android:text="No Decoration"/>
    </LinearLayout>

    <LinearLayout android:gravity="center_vertical"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/decoration_3_icon"
                   android:layout_width="25sp"
                   android:layout_height="25sp"
                   android:paddingRight="10dp"/>

        <TextView android:id="@+id/decoration_3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:background="@drawable/dialog_clicked_states"
                  android:text="No Decoration"/>
    </LinearLayout>

</LinearLayout>